.submit
    position fixed
    bottom 0
    left 0
    // height 40px
    font-size 16px
    background #BC8176
    color #fff
.van-popup
    width 100%
    background transparent
.section1
    color: #fff
    display flex
    flex-direction: column
    align-items: center
    background #E4E4E4
    height (400px/2)
    justify-content: center
    img 
        width (165px/2)
        height (165px/2)
        border:(4px/2) solid #ffffff
        border-radius: 50%
        margin-bottom: (20px/2)
    .percentage_wrap
        font-size: (28px/2)
        &>p
            text-align: center
            line-height: 2
        .percentage
            width: (300px/2)
            height (8px/2)
            border:(2px/2) solid #fff
            border-radius: (4px/2)
            overflow: hidden
            p
                background #fff
                height 100%
.section2
    display flex
    box-sizing: border-box
    padding: 0 (20px/2)
    justify-content space-between
    height (122px/2)
    align-items: center
    background #fff
    font-size: (32px/2)
    span:nth-child(2)
        margin-right:-60%
        color: #FF9963
    .iconfont
        font-size: (40px/2)
.section3
    // height 2.(5px/2)
    background #fff
    // box-sizing: border-box
    padding:(60px/2) (20px/2)
    display: flex
    margin-top: (10px/2)
    ul
        display flex
        flex-wrap: wrap
        li
            box-sizing: border-box
            width: (130px/2)
            height (130px/2)
            border-radius: (10px/2)
            background-position: center
            background-repeat: no-repeat
            background-size: contain
            margin: (20px/2)
            text-align: center
            position relative
            box-shadow: 0 0 3px #797979
            .close
              position:absolute;
              right:0;
              top:0;
              color:#fff;
              background:red
              border-radius: 50%
              font-size: 20px
              transform: translate3d(50%,-50%,0)
            img 
                height 100%
                width: auto
            &.add
                background url('~static/add.png') no-repeat center /37px 37px
                border: (2px/2) solid #F74A63
                input[type=file]
                    width: 100%
                    height 100%
                    opacity 0
.title
    font-size: (26px/2)
    line-height: (75px/2)
    font-weight: bold
    text-indent: (25px/2)

.section4
    box-sizing: border-box
    padding: 0 (27px/2)
    font-size: (30px/2)
    background #fff
    & >li
        padding: (20px/2) 0
        // &:nth-child(2)
        //   &:before
        //     content:none
        &~li
            border-top: (2px/2) solid #F2F2F2
            display flex
            box-sizing: border-box
            padding-right: (40px/2)
            justify-content: space-between
            align-items: center
            position relative
            height (118px/2)
            &:before
                content: ''
                width: (30px/2)
                height (30px/2)
                position absolute
                top: 50%
                right: 0
                transform: translate3d(0,-50%,0)
                background: url('~static/arrow.png') center/15px 15px no-repeat
            .value
                appearance none
                border none 
                font-size: (30px/2)
                // margin-right: -80%
                float right
                width: auto
                color: #949494
