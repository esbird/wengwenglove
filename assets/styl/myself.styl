.container
    height 'calc(100vh - %s)' % 88px
    padding-bottom 5px
    background #E7C6BC
    overflow auto
.menu_item:active
    opacity .5
.brief-wrap
    display flex
    flex-direction: column
    align-items: center
    color: #fff
    img 
        width: (130px/2)
        height (130px/2)
        border:(3px/2) solid #FEE9E8
        border-radius: 50%
        margin: (22px/2) 0
    p
        font-size: (36px/2)
        font-weight: bold
        
    button 
        font-size: (24px/2)
        width: (235px/2)
        height (50px/2)
        border-radius: (25px/2)
        line-height: 1.5
        background #fff
        border:none
        color: #BC8176
        margin: (20px/2) 0 (23px/2)
.menu
    background transparent
    font-size: (32px/2)
    margin: (20px/2) auto 0
    width: (700px/2)
    border-radius: (20px/2)
    overflow: hidden
    .menu_item
        line-height: (108px/2)
        background #fff
        width: (700px/2)
        display flex
        align-items: center
        justify-content: space-between
        box-sizing: border-box
        padding: 0 (20px/2)
        &~.menu_item
            border-top: (2px/2) solid #F2F2F2
        img 
            width: (53px/2)
            height (53px/2)
            float left
            display inline-block
        .iconfont
            font-size: (50px/2)
        span 
            margin-left: -60%
