.banner
  width 100%
  height 275px
  background url('~/static/support-bg.png') top center/cover no-repeat;
.support-wrap
  width 350px
  height 186px
  background #fff
  border-radius 10px
  display flex
  flex-direction column
  align-items  center
  justify-content space-around
  margin -40px auto 0
  box-shadow 2px 2px 6px #AEAEAE
  padding 14px 0
  .title
    font-size: 16px
  .percentage
    font-size: 40px
    color #FFB0B0
  .notif
    font-size: 12px
  button 
    width: 121px
    height 40px
    border-radius: 20px
    border none;
    background #FFB0B0
    color: #ffffff
    font-size: 16px
.support-record
  ul
    width: 100%
    padding 0 13px
    li
      width: 100%
      height 67px
      display flex
      align-items: center
      position relative
      border-bottom: 1.2px solid #f2f2f2
      img 
        width: 45px
        height 45px
        border-radius: 50%
      .text-port
        font-size: 12px
        margin-left: 15px
      span 
        position absolute
        right 0
        top: 50%
        transform: translate3d(0,-50%,0)
        color: red
        font-size: 16px

  .title
    font-size: 16px
    position relative
    text-align: center
    width: 284px
    margin: 18px auto 0
    &:before
      content: ''
      width: 100px
      height 1.2px
      background #000000
      position absolute
      top: 50%
      left: 0
    &:after
      content:''
      width 100px
      height 1.2px
      background #000
      position absolute
      top 50%
      right: 0